@model BioData

<h2>BioData Information</h2>

@if (Model != null)
{
    <div class="form-group">
        <label>Name:</label>
        <p>@(Model.Name ?? "N/A")</p>
    </div>

    <div class="form-group">
        <label>Date of Birth:</label>
        <p>@Model.DateOfBirth.ToString("yyyy-MM-dd")</p>
    </div>

    <div class="form-group">
        <label>Sex:</label>
        <p>@Model.Sex</p>
    </div>

    <div class="form-group">
        <label>Height:</label>
        <p>@Model.Height</p>
    </div>

    <div class="form-group">
        <label>City:</label>
        <p>@(Model.City ?? "N/A")</p>
    </div>

    @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
  @Html.ActionLink("Back to List", "Index");
}
else
{
    <p>No data available.</p>
}
